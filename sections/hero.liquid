<section class="inner-hero-section">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image |  image_url  }}" alt="">
  {% else %}
    {% capture current %} {% cycle 1,2 %} {% endcapture %}
    {{ 'lifestyle-1' | placeholder_svg_tag }}
  {% endif %}
  <div class="custom-css container py-5">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1>{{ section.settings.title }}</h1>
        {{ section.settings.description }}
        <a href="{{ section.settings.button_link }}"> {{ section.settings.button_label }}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .inner-hero-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 400px;
  }

  .inner-hero-section img,
  .inner-hero-section svg {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
  }

  .custom-css {
    background-color: grey;
  }
</style>
{% schema %}
{
  "name": "Hero",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Heading Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Example Heading",
      "label": "Heading Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Example Description</p>",
      "label": "Heading Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button",
      "label": "Heading Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Heading Button Link"
    }
  ],
  "presets": [
    {
      "category": "Hero",
      "name": "Simple Hero"
    }
  ]
}
{% endschema %}
