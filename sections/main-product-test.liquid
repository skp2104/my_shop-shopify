{% assign current_product = product.selected_or_first_available_variant %}
{% assign product_image = current_product.featured_image | default: product.featured_image %}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-12">
      <img
        class="img-fluid"
        src="{{ product_image |  image_url }}"
        alt="{{ product_image.alt }}"
        id="ProductMainImage"
      >
      {% for image in product.images %}
        <img src="{{ image.src |  image_url }}" alt="{{ image.alt }}">
      {% endfor %}
    </div>
    <div class="col-md-6 col-12">
      <h1>{{ product.title }}</h1>
      <p>{{ current_product.price | money }}</p>

      {% comment %}
        {% form 'product', product, class: 'product-form', id: 'AddToCartForm' %}
          <div class="mb-3">Hello world</div>
        {% endform %}
      {% endcomment %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main Product Test",
  "class": "main-product-test-section",
  "settings": [],
  "presets": [
    {
      "name": "Main Product Test",
      "category": "Product"
    }
  ]
}
{% endschema %}
